<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    android:padding="16dp">

    <!-- Thanh tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="Thanhnef"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="10dp" />

    <!-- Màn hình hiển thị kết quả -->
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="0"
        android:gravity="end"
        android:padding="16dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"/>

    <!-- Layout chứa các nút bấm -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:paddingTop="16dp"
        android:layout_marginTop="16dp">

        <Button android:id="@+id/button7" android:text="7" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/button8" android:text="8" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/button9" android:text="9" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/buttonDivide" android:text="/" android:background="@android:color/white" android:textColor="@android:color/black"/>

        <Button android:id="@+id/button4" android:text="4" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/button5" android:text="5" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/button6" android:text="6" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/buttonMultiply" android:text="*" android:background="@android:color/white" android:textColor="@android:color/black"/>

        <Button android:id="@+id/button1" android:text="1" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/button2" android:text="2" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/button3" android:text="3" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/buttonSubtract" android:text="-" android:background="@android:color/white" android:textColor="@android:color/black"/>

        <Button android:id="@+id/button0" android:text="0" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/buttonDecimal" android:text="." android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/buttonEquals" android:text="=" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/buttonAdd" android:text="+" android:background="@android:color/white" android:textColor="@android:color/black"/>

        <Button android:id="@+id/buttonClear" android:text="C" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/buttonPlusMinus" android:text="+/-" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/buttonAC" android:text="AC" android:background="@android:color/white" android:textColor="@android:color/black"/>
        <Button android:id="@+id/buttonDC" android:text="DC" android:background="@android:color/white" android:textColor="@android:color/black"/>
    </GridLayout>
</LinearLayout>